generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id               Int               @id @default(autoincrement())
  companyName      String
  companyName_kana String
  f_ownCompany     Boolean
  f_status         Boolean
  f_prime          Boolean
  f_sub            Boolean
  f_purchase       Boolean
  firstName        String?
  firstName_kana   String?
  lastName         String?
  lastName_kana    String?
  companyBranch    CompanyBranch[]
  companyEmployee  CompanyEmployee[]
}

model CompanyBranch {
  id              Int               @id @default(autoincrement())
  fk_companyId    Int
  branchName      String
  branchName_kana String
  f_status        Boolean
  postcode        String?
  address1        String?
  address2        String?
  tel             String?
  fax             String?
  email           String?
  company         Company           @relation(fields: [fk_companyId], references: [id])
  companyEmployee CompanyEmployee[]
}

model CompanyEmployee {
  id                 Int           @id @default(autoincrement())
  fk_companyId       Int
  fk_companyBranchId Int
  firstName          String
  lastName           String
  firstName_kana     String?
  lastName_kana      String?
  f_status           Boolean
  birthYear          Int?
  birthMonth         Int?
  birthDay           Int?
  employmentStatus   String?
  postcode           String?
  address1           String?
  address2           String?
  tel                String?
  fax                String?
  email              String?
  department         String?
  position           String?
  companyBranch      CompanyBranch @relation(fields: [fk_companyBranchId], references: [id])
  company            Company       @relation(fields: [fk_companyId], references: [id])
}
